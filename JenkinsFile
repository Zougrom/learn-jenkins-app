pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'mode : 18-alpine'
                    nodeReuse true
                }
            }
            steps {
                sh '''
                    ls -la
                    npm --version
                    node --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }
    }
}
